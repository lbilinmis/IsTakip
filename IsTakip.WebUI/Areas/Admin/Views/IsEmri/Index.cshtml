@using IsTakip.Entities.Concrete;
@model List<ViewModelGorevAllData>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count > 0)
{
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">IsEmri Listesi</h2>

            </div>
            <div>

                <a asp-action="Create" asp-controller="IsEmri" asp-area="Admin" class="btn btn-primary btn-sm rounded">Yeni IsEmri</a>
            </div>
        </div>
        <div class="card mb-4">

            <div class="card-body">


                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tanım</th>
                                <th>Oluşturulma</th>
                                <th>Kimde</th>
                                <th>Aciliyet Durumu</th>
                                <th>Rapor Sayısı</th>


                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.CreatedTime</td>
                                    <td>
                                        @{
                                            if (item.AppUser == null)
                                            {
                                                <span class="badge badge-danger"></span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-success"></span>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @item.Immediate.Title
                                    </td>
                                    <td>
                                        @item.Reports.Count
                                    </td>
                                    <td class="text-end">
                                        @if (item.AppUser == null)
                                        {
                                            <a asp-action="PersonelAta" asp-route-id="@item.Id" asp-controller="IsEmri" class="btn btn-sm font-sm rounded btn-brand"> <i class="material-icons md-edit"></i> PersonelAta </a>

                                        }
                                        else
                                        {
                                            <a asp-action="Detay" asp-route-id="@item.Id" asp-controller="IsEmri" class="btn btn-sm font-sm btn-danger rounded"> <i class="material-icons md-delete_forever"></i> Detay </a>

                                        }

                                        @*<a asp-action="Update" asp-route-id="@item.Id" asp-controller="IsEmri" class="btn btn-sm font-sm rounded btn-danger"> <i class="material-icons md-delete_forever"></i> Delete </a>*@
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <!-- table-responsive.// -->
                </div>

            </div>

            <!-- card-body end// -->
        </div>

    </section>



}


